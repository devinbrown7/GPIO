<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="28"
            android:id="@+id/checkBox28"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:checked="false"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/checkBox30"
            android:layout_alignStart="@+id/checkBox30" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="30"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:id="@+id/checkBox30"
            android:checked="false"
            android:clickable="true"
            android:layout_below="@+id/checkBox28"
            android:layout_alignLeft="@+id/checkBox31"
            android:layout_alignStart="@+id/checkBox31" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="31"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:id="@+id/checkBox31"
            android:checked="false"
            android:clickable="true"
            android:layout_below="@+id/checkBox30"
            android:layout_toRightOf="@+id/space"
            android:layout_toEndOf="@+id/space"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/space" />
    </RelativeLayout>
</FrameLayout>